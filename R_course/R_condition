if (condition) {action
} else {action} #else must be in the same line as closing }

if(condition) {
action
} else (condition) {action
} else (contision) {action
}

while (condition { action
} 
break #insert as action to stop loop if condition is met

#for loops
for (variable in sequence) {action}
break

#Example
pow_two <- function(x, print_info = TRUE) {
  y <- x ^ 2
  if (print_info) {
    print(paste(x, "to the power two equals", y))
  }
  return(y)
}
